{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "traceResolution": false
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*", "config.ts", "astro.config.ts", "tailwind.config.ts"]
}
