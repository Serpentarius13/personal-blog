---
import { Icon } from "@/components/solid/Icon";
import { formatDate } from "@/lib/date";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"posts">;
};

const { entry } = Astro.props as {
  entry: CollectionEntry<"posts">;
};

const formattedDate = formatDate(entry.data.date);
const {
  remarkPluginFrontmatter: { readingTime },
} = await entry.render();
---

<div
  class="not-prose group card relative rounded-box border transition-all ease-in-out hover:shadow-xl dark:hover:ring-4 dark:hover:ring-primary"
>
  <a href={`/blog/${entry.slug}`} class="card-body flex flex-col gap-4 sm:flex-row sm:items-center">
    {
      entry.data.image && (
        <div class="max-w-[200px] sm:flex-shrink-0">
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            widths={[130, 200]}
            sizes={`(max-width: 600px) 130px, (min-width: 600px) 200px`}
            class="object-cover"
          />
        </div>
      )
    }
    <div class="flex flex-grow flex-col gap-1">
      <h3 class="text-lg">
        {entry.data.title}
      </h3>
      <p class="mb-2 pb-1 text-sm">{entry.data.description}</p>
      <div class="mb-2 flex flex-wrap items-center gap-x-2 text-sm">
        <span>{formattedDate}</span> |
        <span>{readingTime}</span>
      </div>
      {
        entry.data.tags && (
          <div class="flex flex-wrap gap-2">
            {entry.data.tags.map((tag) => (
              <span class="badge flex items-center duration-300 group-hover:bg-secondary group-hover:text-secondary-content">
                #{tag}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </a>

  <Icon
    className="absolute -right-32 bottom-4 flex size-12 h-12 w-12 items-center justify-center opacity-0 transition-all duration-500 ease-in-out la--chevron-right group-hover:-translate-x-36 group-hover:opacity-100"
  />
</div>
