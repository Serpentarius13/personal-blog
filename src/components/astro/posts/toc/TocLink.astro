---
import { Icon } from "@/components/preact/Icon";

interface Props {
  slug: string;
  text: string;
  index: number | string;
}

const { slug, text, index } = Astro.props;
---

<a
  href={`#${slug}`}
  id={`toc-link-${slug}`}
  class="flex items-end text-nowrap text-lg [&.active]:!bg-base-100 [&.seeing.active]:text-primary-content [&.seeing]:pointer-events-none [&.seeing]:cursor-default [&.seeing]:text-primary [&.seeing]:hover:bg-base-100"
  ><span class="text-2xl font-bold"
    >{index} <Icon className="line-md--arrow-right text-sm" /></span
  >{text}</a
>
