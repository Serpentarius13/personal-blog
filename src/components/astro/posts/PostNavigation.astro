---
import { Icon } from "@/components/preact/Icon";

interface Props {
  next?: string | undefined;
  prev?: string | undefined;
}

const { next, prev } = Astro.props;
---

<div class="box mt-12 flex flex-col gap-2">
  <slot name="title" />

  <a href={next} class="link">
    <slot name="next" />
    <Icon className="rotate-90 line-md--arrow-left" />
  </a>

  <a href={prev} class="link">
    <Icon className="-rotate-90 line-md--arrow-right" />
    <slot name="prev" />
  </a>
</div>

<style lang="postcss">
  .link {
    @apply btn btn-md w-full btn-outline disabled:btn-ghost disabled:pointer-events-none disabled:cursor-not-allowed;

    [data-icon] {
        @apply transition-all duration-500;
    }

    &:hover .arrow-right {
      @apply -translate-x-2;
    }

    &:hover .arrow-left {
      @apply translate-x-2;
    }
    

    &:not(:link) {
      @apply opacity-50  pointer-events-none;
    }
  }
</style>
