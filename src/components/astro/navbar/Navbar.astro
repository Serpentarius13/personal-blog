---
import ThemeDropdown from "@/components/astro/ThemeDropdown.astro";
import SearchTrigger from "@/components/astro/search/SearchTrigger.astro";
import { Icon } from "@/components/solid/Icon";
import { CONFIG } from "config";
import logo from "./logo.svg?raw";
---

<header
  id="navbar"
  class="mounting group navbar sticky top-2 z-50 mx-auto mb-6 mt-4 max-w-5xl rounded-box bg-base-100 bg-base-100/30 px-2 shadow-md backdrop-blur-lg transition-all md:px-4"
>
  <div class="flex gap-2 shadow-xl"></div>
  <div class="navbar-start">
    <a class="flex items-center gap-1" href="/" id="page-title">
      <Fragment set:html={logo} src={logo} is:raw class="red" />
      <span class="ml-2 text-xl transition-all hover:underline -sm:hidden">
        {CONFIG.SITE_TITLE}
      </span>
    </a>
  </div>
  <div class="ml-auto w-fit">
    <ul class="menu menu-horizontal hidden px-1 md:flex">
      {
        CONFIG.NAV_LINKS.map((link) => {
          return (
            <li>
              <a href={link.href}>{link.title}</a>
            </li>
          );
        })
      }
    </ul>

    <div class="flex items-center gap-2">
      <slot />
      <SearchTrigger />
      <ThemeDropdown class="group-[.shrinked]:!dropdown-left group-[.shrinked]:!dropdown-bottom">
        <Icon className="text-2xl game-icons--dandelion-flower" id="icon-flower" />
      </ThemeDropdown>
    </div>
  </div>

  <style>
    :global(#logo) {
      width: 32px;
      height: 32px;
      @apply fill-primary;
      animation: rotate 10s reverse linear infinite;
    }

    :global(#icon-flower) {
      animation: rotate 10s linear infinite;
      @apply text-3xl;
    }

    @keyframes rotate {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    #navbar {
      &.mounting {
        @apply opacity-0;
      }
      &.shrinked {
        @apply w-auto !ml-auto mx-0 duration-[300] ease-in;

        #page-title {
          @apply hidden;
        }
      }
    }
  </style>

  <script>
    import { debounce } from "@/lib/utils";

    const navbar = document.querySelector("#navbar")!;

    if (window.scrollY > 250) {
      navbar.classList.add("!duration-0");
      navbar.classList.add("shrinked");
      navbar.classList.remove("!duration-0");
    }

    navbar.classList.remove("mounting");

    const handleScroll = debounce(() => {
      if (window.scrollY > 250) {
        navbar.classList.add("shrinked");
        return;
      }

      navbar.classList.remove("shrinked");
    }, 100);

    window.addEventListener("scroll", handleScroll, { passive: true });
  </script>
</header>
