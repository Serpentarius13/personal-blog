---
import AppIcon from "@/components/astro/AppIcon.astro";
import SocialLinks from "@/components/astro/index/SocialLinks.astro";
import { IconSet } from "config";
import Flower from "./flower.svg?raw";
---

<section class="box card">
  <div class="card-content flex items-start gap-2">
    <div class="flex flex-col gap-2">
      <h2 class="text-3xl">Welcome to my place 🛋️</h2>
      <p>
        <span>
          Here I write about my favorite programming language <span
            title="TypeScript"
          >
            &lcub;<AppIcon
              set={IconSet.LOGOS}
              name="typescript"
              class="inline-block text-lg"
            />
          </span> TypeScript&rcub;, drop some bedtime thoughts on life, and sometimes
          make educative content.
        </span>
        <div class="hidden items-center gap-2 sm:flex">
          You can find me here: <SocialLinks />
        </div>

        <span class="hidden sm:inline">Hope you will rest well 😼</span>
      </p>
    </div>
    <div class="h-full">
      <Fragment set:html={Flower} />
    </div>
  </div>
  <div class="flex flex-col gap-1 sm:hidden">
    You can find me here: <SocialLinks />
    <span class="pt-2">Hope you will rest well 😼</span>
  </div>
</section>

<style is:global lang="postcss">
    #flower g {
      @apply dark:fill-base-content;
    }

  #flower {
    @apply w-[120px] md:min-w-[220px] h-[200px] md:h-[320px]
  }
</style>
