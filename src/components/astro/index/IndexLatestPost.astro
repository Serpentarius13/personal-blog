---
import type { CollectionEntry } from "astro:content";
import PostCard from "../posts/PostCard.astro";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<section class="box mt-8 flex flex-1 flex-col gap-4 lg:mt-4">
  <h2 class="font-caveat text-4xl">Check out my latest post!</h2>
  <PostCard post={post} />

  <a href="/blog" class="btn btn-outline btn-primary mx-auto w-fit">More blog posts </a>
</section>
