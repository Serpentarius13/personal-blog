---
import { Icon } from "@/components/preact/Icon";
import { CONFIG } from "config";
---

<button
  class="btn btn-ghost btn-sm"
  onclick={`document.getElementById("${CONFIG.SEARCH_MODAL_ID}").showModal()`}
  aria-labelledby="search-btn-label"
>
  <Icon className="line-md--search text-xl" />
  <span id="search-btn-label" class="sr-only">
    Opens dialog window for global article search
  </span>
</button>
