---
import { Icon } from "@/components/react/Icon";
import { cn } from "@/lib/cn";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {}

const { class: className, ...props } = Astro.props;
---

<button
  aria-labelledby="scroll-top-btn-label"
  class={cn(
    "btn btn-primary fixed bottom-2 right-2 z-[10] translate-y-[120px] text-2xl opacity-0 [&.visible]:translate-y-0 [&.visible]:opacity-100",
    className,
  )}
  {...props}
>
  <span class="sr-only" id="scroll-top-btn-label"> Scroll to top </span>
  <Icon className="line-md--arrow-up" />
</button>

